{
  "all": true,
  "extension": [
    ".js",
    ".jsx",
    ".ts",
    ".tsx"
  ],
  "include": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/cypress/**",
    "**/node_modules/**"
  ],
  "reporter": [
    "html",
    "lcov",
    "text",
    "text-summary"
  ],
  "check-coverage": false,
  "watermarks": {
    "lines": [70, 90],
    "functions": [70, 90],
    "branches": [60, 80],
    "statements": [70, 90]
  }
} 